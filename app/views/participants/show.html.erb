<h3>Participant details</h3>

<body>
  <table style="width: 300px;" class="table table-dark">
    <tr>
      <td style="width: 140px;">First Name:</td>
      <td colspan="1"><%= @participant.first_name %></td>
    </tr>
    <tr>
      <td>Last Name:</td>
      <td colspan="1"><%= @participant.last_name %>
    </tr>
    <tr>
      <td>Email:</td>
      <td colspan="1"><%= @participant.email %></td>
    </tr>
    <tr>
      <td>Associated Bill:</td>
      <td colspan="1"><%= @participant.bills.map { |b| b.name}.join(', ') %></td>
    </tr>
    <tr>
      <td>Cost per bills:</td>
      <td colspan="1"><%= @participant.cost_per_bill %></td>
    </tr>
  </table>
</body>